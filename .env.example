# Server Configuration
NODE_ENV=production
PORT=3000
CLIENT_URL=https://pythagora-ai-platform.vercel.app

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pythagora-ai

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=pythagora-ai-super-secret-jwt-key-2024-production
JWT_REFRESH_SECRET=pythagora-ai-super-secret-refresh-key-2024-production

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GITHUB_TOKEN=your-github-token

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads
FILE_BASE_PATH=/workspace/files

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Deployment Configuration
VERCEL_TOKEN=your-vercel-token
NETLIFY_TOKEN=your-netlify-token
HEROKU_API_KEY=your-heroku-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key